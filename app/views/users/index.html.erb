<% provide(:title, 'All users') %>
<h1>Users List</h1>

	<%= form_tag('/users', method: :get, class: "form-search") do %>
	  <div class="input-append">
	    <input name="search" type="search" class="span2 search-query" value="<%=@kw_ret%>" >
	    <button type="submit" class="btn">Search</button>
	  </div>
	<% end %>
<ul class="users">
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
<%= paginate @users %>
</ul>