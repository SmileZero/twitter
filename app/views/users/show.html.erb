<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= image_tag @user.avatar.to_s, class: "avatar" %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.statuses.any? %>
      <h3>Status (<%= @user.statuses.count %>)</h3>
      <ol class="statuses">
        <%= render @statuses %>
      </ol>
	<%= paginate @statuses %>
    <% end %>
  </div>
</div>