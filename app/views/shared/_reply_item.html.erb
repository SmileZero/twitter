<div id="<%= reply_item.id %>">
  <%= link_to image_tag(reply_item.user.avatar.to_s, class: "avatar"), reply_item.user %>
  <span class="user">
    <%= link_to reply_item.user.name, reply_item.user %>
  </span>
  <span class="content">
    <%= link_to "@#{reply_item.reply_to.user.name}","/users/#{reply_item.reply_to.user.id}"%>
    <%= " #{reply_item.content}" %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(reply_item.created_at) %> ago.
  </span>
  <% if current_user?(reply_item.user) %>
    <%= link_to "delete", reply_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: reply_item.content %>
  <% end %>
</div>