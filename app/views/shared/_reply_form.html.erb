<%= form_for(@status) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :in_reply_to, value: reply_id %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose reply..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>